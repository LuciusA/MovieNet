<Window x:Class="MovieNetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieNetWPF"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource VMLocator}, Path=MainVM}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Label1" Content="{Binding Name}" HorizontalAlignment="Left" Height="94" Margin="254,102,0,0" VerticalAlignment="Top" Width="270" Background="#FF05092C" Foreground="White"/>
        <Button x:Name="Button1" Command="{Binding MyCommand}" Content="Click here" HorizontalAlignment="Left" Height="38" Margin="298,258,0,0" VerticalAlignment="Top" Width="186" Background="#FF7C7575" Foreground="#FFF7F5F5"/>

    </Grid>

</Window>
