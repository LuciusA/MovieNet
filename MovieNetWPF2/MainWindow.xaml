<Window x:Class="MovieNetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieNetWPF"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource VMLocator}, Path=MainVM}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Button1" Command="{Binding MyCommand}" Content="Click here" HorizontalAlignment="Left" Height="38" Margin="298,258,0,0" VerticalAlignment="Top" Width="206" Background="#FF21D305" Foreground="#FFF7F5F5"/>
        <TextBox x:Name="Username" Text="{Binding Username}" HorizontalAlignment="Left" Height="32" Margin="298,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>
        <TextBox x:Name="Password" Text="{Binding Password}" HorizontalAlignment="Left" Height="32" Margin="298,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>

    </Grid>

</Window>
